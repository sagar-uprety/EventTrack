
<%- include ("../partials/header") %>


<div class="columns is-tablet">
  <div class="column is-half is-offset-one-quarter">
    <h1>Update <%=events.name%></h1>

    <form action="/events/<%=events._id%>?_method=PUT" method="POST">
      <div class="field">
        <label class="label">Event Name</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="event[name]"
            value= "<%=events.name%>"
            required
          />
        </div>
      </div>

      <div class="field">
        <label class="label">Venue</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="event[venue]"
            value= "<%=events.venue%>"
            required
          />
        </div>
      </div>

      <div class="field">
        <label class="label">Image URL</label>
        <div class="control">
          <input
            class="input"
            type="text"
            name="event[image]"
            value= "<%=events.image%>"
            required
          />
        </div>
      </div>

      <div class="field">
        <label class="label">Event Catagory</label>
        <div class="control">
          <div class="select">
            <select>
              <option>Science and Tech</option>
              <option>Educational</option>
              <option>Social Service</option>
              <option>Community</option>
              <option>Dance, Music and Concerts</option>
              <option>Others</option>
            </select>
          </div>
        </div>
      </div>

      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea
            class="textarea"
            name= "event[description]"
          ><%=events.description %>"</textarea>
        </div>
      </div>

      <div class="field">
        <label class="label">Event Image</label>
        <div id="event-upload" class="file has-name is-fullwidth is-success">
          <label class="file-label">
            <input class="file-input" type="file" name="resume" />
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a file
              </span>
            </span>
            <span class="file-name">
              Event_Image.png
            </span>
          </label>
        </div>
      </div>

      <div class="field is-grouped is-grouped-centered">
        <div class="control">
          <button class="button is-link">Submit</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script>
  const fileInput = document.querySelector("#event-upload input[type=file]");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector("#event-upload .file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>

<%- include ("../partials/footer") %>
