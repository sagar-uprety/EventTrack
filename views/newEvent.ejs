<%- include ("partials/header") %>

<div class="container">
  <h1>Create an Event</h1>

  <form action="/events" method="POST">
    <div class="field">
      <label class="label">Event Name</label>
      <div class="control">
        <input class="input" type="text" placeholder="Text input" />
      </div>
    </div>

    <div class="field">
      <label class="label">Venue</label>
      <div class="control">
        <input class="input" type="text" placeholder="Text input" />
      </div>
    </div>
    <div class="field">
      <label class="label">Organizer Email Address</label>
      <div class="control has-icons-left has-icons-right">
        <input
          class="input is-primary"
          type="email"
          placeholder="Email input"
          value="example@gmail.com"
        />
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </div>
    </div>

    <div class="field">
      <label class="label">Event Catagory</label>
      <div class="control">
        <div class="select">
          <select>
            <option>Science and Tech</option>
            <option>Educational</option>
            <option>Social Service</option>
            <option>Community</option>
            <option>Dance, Music and Concerts</option>
            <option>Others</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label">Description</label>
      <div class="control">
        <textarea
          class="textarea"
          placeholder="Describe your evevnt in detail"
        ></textarea>
      </div>
    </div>

    <div class="field">
    <label class="label">Event Image</label>
    <div id="event-upload" class="file has-name is-fullwidth is-success">
      <label class="file-label">
        <input class="file-input" type="file" name="resume"/>
        <span class="file-cta">
          <span class="file-icon">
            <i class="fas fa-upload"></i>
          </span>
          <span class="file-label">
            Choose a file
          </span>
        </span>
        <span class="file-name">
          Event_Image.png
        </span>
      </label>
    </div>
    </div>

    <div class="field">
      <div class="control">
        <label class="checkbox">
          <input type="checkbox" />
          I agree to the <a href="#">terms and conditions</a>
        </label>
      </div>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-link is-light">Cancel</button>
      </div>
    </div>
  </form>
</div>







<script>
  const fileInput = document.querySelector('#event-upload input[type=file]');
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector('#event-upload .file-name');
      fileName.textContent = fileInput.files[0].name;
    }
  }
</script>


<%- include ("partials/footer") %>
